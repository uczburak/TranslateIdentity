@model List<AppRole>
@{ ViewData["Title"] = "Roles";
                Layout = "~/Views/Admin/_AdminLayout.cshtml"; }

<h3>Roller</h3>
<hr />

<table class="table table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Rol Ismi</th>
        <th>Silme</th>
        <th>Guncelle</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Id</td>
    <td>@item.Name</td>
    <td>
        <form asp-action="RoleDelete" asp-route-id="@item.Id" method="post">
            @*burayi mutlaka bir formun icerisinde tanimlamamiz gerekiyor*@
            <button class="btn btn-success" type="submit">Sil</button>
        </form>
    </td>
    <td><a class="btn btn-info" asp-action="RoleUpdate" asp-route-id="@item.Id">Guncelle</a></td>
</tr>}

</table>

<a asp-action="RoleCreate" class="btn btn-info">Role olustur</a>

