<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src=~/lib/jquery/jquery.js></script>
    <link href=~/lib/twitter-bootstrap/css/bootstrap.css rel="stylesheet" />
    <script src=~/lib/jquery-validation/dist/jquery.validate.js></script>
    <script src=~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js></script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">BidiBidi.com</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Admin">Admin Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-danger" asp-action="Index" asp-controller="Member">Member Ana Sayfa</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="container" style="margin-top:10px;">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-4">

                <h3>Menu</h3>

                <a class="btn btn-danger btn-block" asp-action="Claims" asp-controller="Admin">Uye Claims</a>

                <a class="btn btn-danger btn-block" asp-action="Users" asp-controller="Admin">Uyeler</a>

                <a class="btn btn-danger btn-block" asp-action="Roles" asp-controller="Admin">Roller</a>

                <a class="btn btn-danger btn-block" asp-action="Logout" asp-controller="Member" asp-route-returnUrl="/Home/Index">Cikis yap</a>

            </div>

        </div>

    </div>
</body>
</html>
